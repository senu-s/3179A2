{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Literacy, IQ and Population",
    "width": 1000,
    "height": 400,
    "data": {
        "url": "./avgIQpercountry.csv"
    },
    "params": [
        {
            "name": "Continent_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "North America",
                    "South America",
                    "Central America",
                    "Europe",
                    "Africa",
                    "Asia",
                    "Oceania"
                ],
                "labels": [
                    "Show All",
                    "North America",
                    "South America",
                    "Central America",
                    "Europe",
                    "Africa",
                    "Asia",
                    "Oceania"
                ],
                "name": "Continent Selection"
            }
        }
    ],
    "transform": [{"filter": "datum['Literacy Rate'] > 0"},
    {"filter": "datum['Average IQ'] > 0"}, 
    {"filter": "Continent_selection == null || datum.Continent == Continent_selection"}],
    "mark": "circle",
    "encoding": {
        "x":{
            "field": "Literacy Rate",
            "type": "quantitative",
            "axis": {"tickCount": 10},
            "scale": {"domain": [0.1, 1.1]}
        },
        "y":{
            "field": "Average IQ",
            "type": "quantitative",
            "axis": {"tickCount": 5},
            "scale": {"domain": [40, 110]}
        }
    },
    "layer": [{
        "mark": "circle",
        "encoding": {
            "size": {
                "field": "Population - 2023",
                "type": "quantitative",
                "scale": {
                    "type": "threshold",
                    "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
                    "range": [50, 150, 300, 600, 1200, 2400]
                },
                "legend": {"format": ".1s"}
            },
            "color":{
                "field": "Continent",
                "type": "nominal",
                "scale": {
                    "domain": [
                        "North America",
                        "South America",
                        "Central America",
                        "Europe",
                        "Africa",
                        "Asia",
                        "Oceania"
                    ],
                    "range": [
                        "#ea4346",
                        "#984ea3",
                        "#ff7f00",
                        "#a6cee3",
                        "#f065b6",
                        "#d68557",
                        "#d4bc11"
                    ]
                }
            },
            "opacity": {"value": 0.7},
        
            "tooltip": [
                {"field": "Country", "type": "nominal"},
                {"field": "Literacy Rate", "type": "quantitative", "format": ".0%"},
                {"field": "Average IQ", "type": "quantitative"},
                {"field": "Population - 2023", "type": "quantitative", "title": "Population", "format": ","}
            ] 
        }
    },
    {
        "mark": {
            "type": "text",
            "align": "right",
            "baseline": "middle",
            "dx": -12,
            "fontSize": 11.5,
            "fontStyle": "italic"
        },
        "encoding": {
            "text": {"field": "Country", "type": "nominal"},
            "color":{"value": "black"},
            "opacity": {
                "condition": {
                    "test": "datum['Country'] == 'Singapore' || datum['Country'] == 'India' || datum['Country'] == 'Australia' || datum['Country'] == 'Italy' || datum['Country'] == 'Portugal' || datum['Country'] == 'Niger' || datum['Country'] == 'Ethiopia' || datum['Country'] == 'United States' || datum['Country'] == 'Brazil' || datum['Country'] == 'Argentina' || datum['Country'] == 'Puerto Rico' || datum['Country'] == 'Haiti'",
                    "value": 1
                },
                "value": 0
            }
        },
        "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Literacy Rate", "type": "quantitative"},
            {"field": "Average IQ", "type": "quantitative"},
            {"field": "Population - 2023", "type": "quantitative", "title": "Population", "format": ","}
        ]
    }

]

}